syntax on
set nu
set relativenumber
set hls
set autoindent
" set smartindent

" Tab related
set sw=4
set ts=4
set expandtab

" Clipboard
set clipboard=unnamedplus

" Support Chinese
set fileencoding=utf-8
set fileencodings=utf-8,gb2312,gbk,cp936,big5,ucs-bom
set termencoding=utf-8
set encoding=utf-8
